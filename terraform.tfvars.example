# Required Variables
project_id   = "YOUR_GCP_PROJECT_ID"
region       = "us-central1"
domain_name  = "your-domain.com"

# IAP Configuration (Required for security)
enable_iap        = true
iap_client_id     = "YOUR_IAP_CLIENT_ID"
iap_client_secret = "YOUR_IAP_CLIENT_SECRET"
iap_members = [
  "user:your-email@gmail.com",
  # "group:team@example.com",
  # "serviceAccount:service@project.iam.gserviceaccount.com"
]

# Container Images (Update after building)
frontend_image = "gcr.io/cloudrun/hello"
backend_image  = "gcr.io/cloudrun/hello"

# Optional: Database Configuration
db_instance_name = "rag-pgvector"
db_name         = "ragdb"
db_user         = "raguser"

# Optional: Scaling Configuration
min_instances = 0
max_instances = 50

# Optional: Network Configuration (uncomment to customize)
# allowed_egress_cidrs = ["0.0.0.0/0"]  # Allow all egress, or specify CIDRs